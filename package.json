{
    "name": "oci-policy-language",
    "displayName": "OCI Policy Language",
    "description": "OCI Policy language highlighter ",
    "version": "0.0.1",
    "publisher": "joaofelipes",
    "engines": {
        "vscode": "^1.54.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "opl",
            "aliases": ["OCI Policy", "opl"],
            "extensions": ["opl"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "opl",
            "scopeName": "source.ocipolicy",
            "path": "./syntaxes/opl.tmLanguage.json"
        }]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/joaofelipes/oci-policy-language.git"
      }
}